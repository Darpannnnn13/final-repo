# ==================== PARENTEYE ENVIRONMENT CONFIGURATION ====================
# Copy this file to .env and fill in your actual values
# This file contains ALL configuration keys for backend and client
# ============================================================================

# ==================== DATABASE CONFIGURATION ====================
# MongoDB Atlas or Local MongoDB connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
# Local: mongodb://localhost:27017/
MONGODB_URI=mongodb+srv://ronit:ParentEyeadmintest@cyber-lab.xxxxx.mongodb.net/parenteye?retryWrites=true&w=majority

# Database name for child monitoring data
DB_NAME=child_monitoring

# ==================== SECURITY & AUTHENTICATION ====================
# Admin password for dashboard access (CHANGE THIS!)
# Minimum 12 characters recommended
ADMIN_PASSWORD=YourSecurePassword123

# Super admin password for system administration
# Only use this for initial setup and critical operations
SUPER_ADMIN_PASSWORD=SuperAdmin@2026

# Secret key for Flask sessions (auto-generated if not set)
# Use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-min-32-chars

# ==================== AI & ML INTEGRATION ====================
# Google Gemini AI API Key for daily summaries and analysis
# Get from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model version to use
# Options: gemini-1.0-pro, gemini-pro-vision, gemini-2.0-flash
GEMINI_MODEL=gemini-1.0-pro

# Enable AI prompt logging (set to true/1/yes to enable)
# Logs all AI requests to console (useful for debugging)
AI_PROMPT_LOG=false

# ==================== BACKEND SERVER CONFIGURATION ====================
# Backend server URL (for client device reference)
# Use IP if accessing from other machines
# Local: http://localhost:5000
# Network: http://YOUR_IP:5000
BACKEND_URL=http://localhost:5000

# Flask environment mode
# Options: development, production, testing
FLASK_ENV=production

# Flask debug mode (only for development!)
# Set to false in production
FLASK_DEBUG=false

# Backend server port
BACKEND_PORT=5000

# ==================== CLIENT CONFIGURATION ====================
# Device ID (auto-detected if not set)
# Format: hostname or custom identifier
DEVICE_ID=auto

# Device name for dashboard display
# Format: friendly name for the device
DEVICE_NAME=Child-Device-1

# ==================== FEATURE FLAGS ====================
# Enable/disable specific features
ENABLE_KEYLOGGING=true
ENABLE_SCREENSHOT=true
ENABLE_WEBCAM=true
ENABLE_LOCATION=true
ENABLE_WEBSITE_BLOCKING=true
ENABLE_APP_BLOCKING=true
ENABLE_AI_ANALYSIS=true

# ==================== LOGGING & DEBUG ====================
# Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable detailed console output
VERBOSE=false

# Save logs to file
LOG_TO_FILE=true
LOG_FILE_PATH=logs/parenteye.log

# ==================== OPTIONAL: WEBHOOK NOTIFICATIONS ====================
# Webhook URL for critical alerts (Discord, Slack, etc.)
# Leave empty to disable
WEBHOOK_URL=

# Webhook security token
WEBHOOK_TOKEN=

# ==================== OPTIONAL: THIRD-PARTY SERVICES ====================
# SendGrid email API key (for email notifications)
SENDGRID_API_KEY=

# SendGrid sender email
SENDGRID_FROM_EMAIL=noreply@parenteye.local

# ==================== DEPLOYMENT SETTINGS ====================
# Vercel deployment URL (if using Vercel)
VERCEL_URL=

# Allowed domains for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# ===== QUICK REFERENCE =====
# To use this file:
# 1. Copy this file: cp .env.example .env
# 2. Edit .env with your actual values
# 3. DO NOT commit .env to git
# 4. Add .env to .gitignore
#
# Required fields (must be set):
#   - MONGODB_URI
#   - ADMIN_PASSWORD
#   - SUPER_ADMIN_PASSWORD
#   - SECRET_KEY
#   - GEMINI_API_KEY (if using AI features)
#
# Optional fields have defaults
